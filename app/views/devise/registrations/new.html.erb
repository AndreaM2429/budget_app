<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
    <ul class="d-flex m0 ul-nav">
      <li class="material-symbols-outlined">
          <%= link_to "arrow_back", root_path, class: "no-underline m0" %>
      </li>
      <li class="m0"><span class="family-general">REGISTER</span></li>
      <li><%= f.submit "Next", class: "link-seeming font-nav m0 family-general" %></li>
    </ul>
	</div>

  <div>
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="d-flex-col field a-center">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "form-input family-general" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-input family-general" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-input family-general" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "form-input family-general" %>
  </div>

<% end %>
